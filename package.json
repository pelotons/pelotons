{
  "name": "peloton",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev:web": "npm run dev -w apps/web",
    "dev:mobile": "npm run start -w apps/mobile",
    "build:web": "npm run build -w apps/web",
    "build:shared": "npm run build -w packages/shared",
    "lint": "eslint apps packages --ext .ts,.tsx",
    "typecheck": "npm run typecheck -w packages/shared && npm run typecheck -w apps/web && npm run typecheck -w apps/mobile"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@react-native-community/cli-server-api": "^20.0.2",
    "react-native": "0.73.6"
  }
}
